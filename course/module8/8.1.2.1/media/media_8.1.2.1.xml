	<component id="ID_s6_SC5" fontSize="12" fontFace="_typewriter" fontColor="#ffffff">
		<feedback id="fb"><![CDATA[<b><font  face="_sans" color="#FFFFFF" >***You must enter the exact and full command. Commands that include a name or password are case-sensitive.***</font></b>
		]]></feedback>
		<existingcommands><![CDATA[<font  face="_sans" ><b>Exclude the .1 through the .9 address, along with the .254 address from the 192.168.11.0/24 address range.</b></font>]]></existingcommands>
		<command prompt="R1(config)#"><correctresponse><![CDATA[ip dhcp excluded-address 192.168.11.1 192.168.11.9]]></correctresponse>
		</command>
		<command prompt="R1(config)#">
			<correctresponse><![CDATA[ip dhcp excluded-address 192.168.11.254]]></correctresponse>
			<instruction><![CDATA[<font  face="_sans" ><b>Configure the DHCPv4 pool LAN-POOL-2 for 192.168.11.0/24 LAN.</b></font>]]></instruction>
		</command>
		<command prompt="R1(config)#">
			<correctresponse><![CDATA[ip dhcp pool LAN-POOL-2]]></correctresponse>
		</command>
		<command prompt="R1(dhcp-config)#">
			<correctresponse><![CDATA[network 192.168.11.0 255.255.255.0]]></correctresponse>
			<instruction><![CDATA[<font  face="_sans" ><b>Configure the default gateway address.</b></font>]]></instruction>
		</command>
		<command prompt="R1(dhcp-config)#">
			<correctresponse><![CDATA[default-router 192.168.11.1]]></correctresponse>
			<instruction><![CDATA[<font  face="_sans" ><b>Configure the DNS server address using the same address used for LAN-POOL-1.</b></font>]]></instruction>
		</command>
		<command prompt="R1(dhcp-config)#">
			<correctresponse><![CDATA[dns-server 192.168.11.5]]></correctresponse>
			<instruction><![CDATA[<font  face="_sans" ><b>Configure the domain name using the same address used for LAN-POOL-1.</b></font>]]></instruction>
		</command>
		<command prompt="R1(dhcp-config)#">
			<correctresponse><![CDATA[domain-name example.com]]></correctresponse>
			<deviceresponse><![CDATA[<font face="_typewriter" >R1(dhcp-config)#</font>]]></deviceresponse>
			<instruction><![CDATA[<font  face="_sans" ><b>You successfully configured the DHCPv4 Server.</b></font>]]></instruction>
		</command>
