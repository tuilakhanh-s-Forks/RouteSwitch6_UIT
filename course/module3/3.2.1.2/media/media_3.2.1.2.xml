			<instruction><![CDATA[<font face="_sans"><b>You are now logged into R3. Advertise the RIP networks for R3. Start with the lowest IP network.</b>]]></instruction>
		</command>
		<command prompt="R3(config)#">
			<correctresponse><![CDATA[router rip]]></correctresponse>
		</command>
		<command prompt="R3(config-router)#">
			<correctresponse><![CDATA[network 192.168.4.0]]></correctresponse>
		</command>
		<command prompt="R3(config-router)#">
